<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TelegramProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backGround</item>
        <item name="colorPrimaryVariant">@color/backGround</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextMain">
        <item name="android:textStyle">italic</item>
        <item name="android:background">@color/back</item>
    </style>
    <style name="TextMain.Titles">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/TextMainSize</item>


    </style>
    <style name="TextMain.subTitles">
        <item name="android:textColor">@color/titles</item>
        <item name="android:textSize">@dimen/subTitleSize</item>
    </style>
    <style name="TextMain.View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
    </style>
    <style name="MainTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/back</item>
        <item name="android:textColor">@color/NainTilte</item>
        <item name="android:textSize">@dimen/account</item>
        <item name="android:padding">@dimen/paddAcc</item>
        <item name="android:layout_marginTop">@dimen/profileMargin</item>
    </style>
</resources>